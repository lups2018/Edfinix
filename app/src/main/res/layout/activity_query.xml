<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentStudent.Query"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:scrollIndicators="right"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a Query"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:textColor="@color/b2"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_short"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:cardBackgroundColor="@color/b1"
        app:cardCornerRadius="5dp"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/user_profile_image_background"
                android:drawableTint="#FF4081"
                android:singleLine="true"
                android:hint="Topic*"
                android:inputType="textEmailAddress"
                android:id="@+id/topicQuery"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            >
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/user_profile_image_background"
                android:drawableTint="#FF4081"
                android:hint="Details*"
                android:inputType="numberPassword"
                android:id="@+id/detailsQuery"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="180dp"
            android:textAlignment="center"
            android:id="@+id/query_spinner"
            />
        <View
            android:layout_width="370dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="1dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:background="#d67601"
            android:text="Submit"
            android:id="@+id/button_query"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_gravity="bottom"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:textColor="@color/b2"
        />
    </LinearLayout>
</ScrollView>